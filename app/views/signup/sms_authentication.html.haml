.signup-container
  %h2.signup-header 会員情報入力
  .registration-form

    = form_for @user, url: "/signup/sms_authentication",method: :post do |f|
      .signup-form-container
        .signup-form-container__title
          = label :tel, '携帯番号', class: 'signup-label'
          = f.text_field :tel,placeholder: '例）08011112222'   
        
      = f.submit '次へ進む' 
