    .main
      .main__text
        会員情報入力
      .main__form
        = form_for @user, url: "/signup/registration", meghod: :post do |f|
          .main__form__group
            = f.label 'ニックネーム', class: 'main__form__group__label', for: "user_nickname"
            %span.main__form__group__require 必須
            = f.text_field :nickname, class: "main__form__group__input-box", placeholder: "例）メルカ太郎", autofocus: true, required: 'required', maxlength: "8"
          .main__form__group
            = f.label 'メールアドレス', class: 'main__form__group__label', for: "user_email"
            %span.main__form__group__require 必須
            = f.email_field :email, class: "main__form__group__input-box", placeholder: "PC・携帯どちらでも可", autofocus: true, required: 'required', autocomplete: "email"
          .main__form__group
            = f.label 'パスワード', class: 'main__form__group__label', for: "user_password"
            %span.main__form__group__require 必須
            = f.password_field :password, class: "main__form__group__input-box", placeholder: "7文字以上の半角英数字", autocomplete: "current-password", required: 'required', maxlength: "７"
            .main__form__group__password-revelation
              .main__form__group__password-revelation__checkbox
                = f.check_box :password, {id: 'reveal-password', class: 'checkbox'}, true, false
                = f.label :password, 'パスワードを表示する', for: "reveal-password"
          .main__form__group
            = f.label 'パスワード（確認）', class: 'main__form__group__label', for: "user_password_confirmation"
            %span.main__form__group__require 必須
            = f.password_field :password_confirmation, class: "main__form__group__input-box", placeholder: "7文字以上の半角英数字", autocomplete: "current-password", required: 'required', maxlength: "７"      
          
          .main__form__group
            %h3 本人確認
            %p 安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。
          .main__form__group
            = f.label 'お名前（全角）', class: 'main__form__group__label', for: "user_family_name"
            %span.main__form__group__require 必須
            .main__form__group__input-boxes
              = f.text_field :family_name, class: "main__form__group__input-boxes--username-family", placeholder: "例）山田", required: 'required', pattern: '[^\x20-\x7E]*', maxlength: "32"
              = f.text_field :first_name, class: "main__form__group__input-boxes--username-first", placeholder: "例）太郎", required: 'required', pattern: '[^\x20-\x7E]*', maxlength: "32"
          .main__form__group
            = f.label 'お名前カナ（全角）', class: 'main__form__group__label', for: "user_family_name_kana"
            %span.main__form__group__require 必須
            .main__form__group__input-boxes
              = f.text_field :family_name_kana, class: "main__form__group__input-boxes--username-family", placeholder: "例）ヤマダ", required: 'required', pattern: '[\u30A1-\u30F6]*', maxlength: "32"
              = f.text_field :first_name_kana, class: "main__form__group__input-boxes--username-first", placeholder: "例）タロウ", required: 'required', pattern: '[\u30A1-\u30F6]*', maxlength: "32"
